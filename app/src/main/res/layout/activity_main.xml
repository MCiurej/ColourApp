<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:background="@color/eigengrau"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vert50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/containing_vert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/colours_containing_hor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:weightSum="1"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0.25">

                <ImageView
                    android:id="@+id/analogous_col1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shape_back" />

                <TextView
                    android:id="@+id/analogous_col1_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/analogous_col1"
                    android:layout_alignLeft="@id/analogous_col1"
                    android:layout_alignTop="@id/analogous_col1"
                    android:layout_alignEnd="@id/analogous_col1"
                    android:layout_alignRight="@id/analogous_col1"
                    android:layout_alignBottom="@id/analogous_col1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:textSize="18sp"
                    android:textColor="@color/light" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0.25"
                >

                <ImageView
                    android:id="@+id/analogous_col2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shape_back" />

                <TextView
                    android:id="@+id/analogous_col2_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/analogous_col2"
                    android:layout_alignLeft="@id/analogous_col2"
                    android:layout_alignTop="@id/analogous_col2"
                    android:layout_alignEnd="@id/analogous_col2"
                    android:layout_alignRight="@id/analogous_col2"
                    android:layout_alignBottom="@id/analogous_col2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:textSize="18sp"
                    android:textColor="@color/light" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0.25">

                <ImageView
                    android:id="@+id/comp_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shape_back" />

                <TextView
                    android:id="@+id/comp_colour_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/comp_colour"
                    android:layout_alignLeft="@id/comp_colour"
                    android:layout_alignTop="@id/comp_colour"
                    android:layout_alignEnd="@id/comp_colour"
                    android:layout_alignRight="@id/comp_colour"
                    android:layout_alignBottom="@id/comp_colour"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:textSize="18sp"
                    android:textColor="@color/light" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0.25">

                <ImageView
                    android:id="@+id/fourthview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shape_back" />

                <TextView
                    android:id="@+id/fourthview_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/fourthview"
                    android:layout_alignLeft="@id/fourthview"
                    android:layout_alignTop="@id/fourthview"
                    android:layout_alignEnd="@id/fourthview"
                    android:layout_alignRight="@id/fourthview"
                    android:layout_alignBottom="@id/fourthview"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:textColor="@color/light"
                    android:textSize="18sp" />
            </RelativeLayout>





        </LinearLayout>


        <LinearLayout
            android:id="@+id/chosen_colour_lin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/chosen_colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/shape_main" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chosen_colour_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/light"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="10"
                    android:textColor="@color/light"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/chosen_colour_value_rgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/light"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="10"
                    android:textColor="@color/light"

                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/wheel_containing_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="bottom"
            android:background="@drawable/background_shape_grey"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.apandroid.colorwheel.gradientseekbar.GradientSeekBar
                android:id="@+id/gradientSeekBar"
                app:asb_thumbColor="@color/eigengrau"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />

            <com.apandroid.colorwheel.ColorWheel
                android:id="@+id/colorWheel"
                app:cw_thumbColor="@color/eigengrau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />


        </LinearLayout>


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>